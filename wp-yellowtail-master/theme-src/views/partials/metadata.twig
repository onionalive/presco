<title>{{ meta.title|striptags }}</title>
<meta name="twitter:card" content="summary_large_image" />
<meta property="og:title" content="{{ meta.title|striptags }}"/>
<meta name="description" content="{{ meta.description|striptags }}">
<meta property="og:description" content="{{ meta.description|striptags }}" />
<meta property="og:url" content="{{ meta.url }}" />
<meta property="og:image" content="{{ meta.image|resize(1200, 630, 'center') }}" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="{{ site.title|striptags }}"/>
<meta property="og:type" content="website" />
